<div class="post-filter">
    @for (int i = 0; i < Model.Count; i++)
    {
        <a href="#" class="filter-link" data-filter="@Model[i].Name.ToLower()">
            @Model[i].Name (@Model[i].Count)    
        </a>
        @if (i < Model.Count - 1)
        {
            <span> | </span>
        }
    }
</div>

<script>
    $(document).ready(function () {
        $(".filter-link").click(function (e) {s
            e.preventDefault();
            var filterName = $(this).data("filter");

            $.get("/Posts/GetFilteredPosts", { filter: filterName }, function (data) {
                $("#post-container").html(data);
            });
        });
    });
</script>

<style>
    .post-filter {
        font-size: 14px;
        color: #2c3e50;
    }

    .filter-link {
        text-decoration: none;
        color: #2c3e50;
        font-weight: 500;
        padding: 0 5px;
        cursor: pointer;
    }

        .filter-link:hover {
            text-decoration: underline;
            color: #007bff;
        }
</style>
